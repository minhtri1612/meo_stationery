datasource db {
    provider = "postgresql" // or "mysql" or your preferred database
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum StockStatus {
    OUT_OF_STOCK
    IN_STOCK
    RUNNING_LOW
}

enum OrderStatus {
    PENDING
    PROCESSING
    SHIPPED
    DELIVERED
    CANCELLED
}

model Order {
    id        Int         @id @default(autoincrement())
    user      User        @relation(fields: [userId], references: [id])
    userId    Int         @unique
    status    OrderStatus @default(PENDING)
    createdAt String
    items     OrderItem[]
    payment   Payment[]
}

model OrderItem {
    order     Order   @relation(fields: [orderId], references: [id])
    orderId   Int
    product   Product @relation(fields: [productId], references: [id])
    productId Int
    quantity  Int

    @@id([orderId, productId]) // Composite primary key
}

model Product {
    id         Int         @id @default(autoincrement())
    name       String
    price      Int
    status     String?
    createdAt  String
    category   Category?   @relation(fields: [categoryId], references: [id])
    categoryId Int?
    orderItems OrderItem[]
    stock      StockStatus @default(IN_STOCK)
    quantity   Int
}

model User {
    id          Int     @id @default(autoincrement())
    fullName    String
    email       String  @unique
    gender      String?
    dateOfBirth String?
    createdAt   String
    address     Address @relation(fields: [addressId], references: [id])
    addressId   Int
    orders      Order[]
}

model Category {
    id       Int        @id @default(autoincrement())
    catName  String
    parent   Category?  @relation("ParentChild", fields: [parentId], references: [id])
    parentId Int?
    children Category[] @relation("ParentChild")
    products Product[]
}

model Address {
    id        Int     @id @default(autoincrement())
    street    String
    ward      String?
    district  String?
    city      String?
    country   String?
    apartment String?
    users     User[]
}

model Payment {
    id        Int    @id @default(autoincrement())
    order     Order  @relation(fields: [orderId], references: [id])
    orderId   Int
    amount    Int
    method    String
    status    String
    createdAt String
}
